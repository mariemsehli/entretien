{% block title %}Candidat{% endblock %}

{% block body %}
    <h1>Candidat</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ candidat.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ candidat.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ candidat.prenom }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ candidat.age }}</td>
            </tr>
            <tr>
                <th>Niveau</th>
                <td>{{ candidat.niveau }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('candidat_index') }}">Retour a la liste</a>

    <a href="{{ path('candidat_edit', {'id': candidat.id}) }}">Modifier</a>

